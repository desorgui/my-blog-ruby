<%= form_with url: "/users/#{current_user.id}/posts/#{@post.id}/new-comment", method: :post do |form| %>
  Write your comment <br/>
  <%= form.text_area :text, size: "70x5"  %><br/>
  <%= form.hidden_field :post_id, value: @commented_post_id %>
  <%= form.hidden_field :author_id, value: current_user.id %>
  <%= form.submit "Comment" %>
<% end %>
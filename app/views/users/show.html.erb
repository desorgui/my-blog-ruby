<li>
  <div class="profile">
      <img class="img-profile" src=<%= @user_to_find.photo  %> alt='ooops'/>
  </div>

  <div class="single-user bordered">
      <p class="user-name">
      user Name: <%=@user_to_find.name %>
      </p>
      <div>
      <p class="counter">
      Number of posts: <%=@user_to_find.posts.count %>
      </p>
      </div>
  </div>
</li>

<div class=" bordered bio">
  <h3>Bio</h3>
  <p class="bio">
  <%=@user_to_find.bio %>
  </p>
</div>

<div class ="see-all center addpost">
<a href="/createpost">
<button class ="see-all center addpost">Add post</button>
</a>
</div>
<div>

<% @user_found_posts.each do |post|%>
    <a href=<%="/users/#{@user_to_find.id}/posts/#{post.id}" %>>
        <div>
            <div class="single-user-post bordered">
                <div>
                <p>Post#<%=post.id%> </p>
                    <p class="post-title">
                    Title: <%=post.title %>
                    </p>
                    <p class="post-description">
                    Description: <%=post.text %>
                    </p>
                </div>
                <div>
                <p class="counter">
                Comments: <%=post.comments.count %> | Likes: <%=post.likes.count %> 
                </p>
                </div>
            </div>
            <div class="comment-like">
                <div class="like">
                    <%= form_with url: "/like", method: :post do |form| %>
                        <%= form.hidden_field :post_id, value:post.id %>
                        <%= form.hidden_field :author_id, value: ApplicationController.current_user.id %>
                        <%= form.submit "Like" %>
                    <% end %>
                </div>
                <div class="comment">
                    <a href=<%="/loadcomment/#{post.id}"%>>
                        <button>Comment </button>
                    </a>
                </div>
            </div>
        </div>
    </a>
<% end %>
</div>
<div class="btn">
<a href=<%="/users/#{@user_to_find.id}/posts" %>><button class="see-all center">See all posts </button></a>
</div>
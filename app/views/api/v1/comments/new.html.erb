<%# Expected form to be loaded with succesfull API endpoint 'http://localhost:3000/api/v1/users/:user_id/posts/:post_id/comments/new' %>
<%= form_with url: "/api/v1/users/#{@user.id}/posts/#{@post.id}/comment", method: :post do |f| %>
  <div class="section center">
    <%= f.label :text, 'Comment', class: "label" %>
    <%= f.text_area :text, size: "50x5"%>
    <%= f.submit "comment", class: "back-link" %>
  </div>
<% end %>